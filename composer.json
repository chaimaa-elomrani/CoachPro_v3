{
    "name": "coachpro/v3",
    "description": "Plateforme de mise en relation entre sportifs et coachs sportifs - Architecture MVC",
    "type": "project",
    "require": {
        "php": ">=8.0",
        "ext-pdo": "*",
        "ext-pdo_pgsql": "*",
        "ext-session": "*",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "twig/twig": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}